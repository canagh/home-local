use_xft yes
xftfont Ricty:size=10
alignment top_right
xftalpha 0.8
own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
draw_shades no
draw_outline no
draw_borders no
default_color LightSteelBlue
use_spacer none
no_buffers yes
update_interval 1.0
maximum_width 256

# (down|up)speedgraph:
# Uses a logarithmic scale (to see small numbers) when you use the -l switch.

TEXT
${font OpenLogos:size=32} t ${font Radio Space}${time %A %d %Y}
   ${font OpenLogos:size=30} u ${font Radio Space:size=24}${time %H:%M:%S}
${font}eth0:  ${font PizzaDude Bullets:size=12}N$font  Up:$alignr${upspeedf eth0} Kb/s  
${upspeedgraph eth0 16 -l}
       ${font PizzaDude Bullets:size=12}T$font Down:$alignr${downspeedf eth0} Kb/s  
${downspeedgraph eth0 16 -l}
wlan0: ${font PizzaDude Bullets:size=12}M$font  Up:$alignr${upspeedf wlan0} Kb/s  
${upspeedgraph wlan0 16 -l}
       ${font PizzaDude Bullets:size=12}S$font Down:$alignr${downspeedf wlan0} Kb/s  
${downspeedgraph wlan0 16 -l}

${font StyleBats:size=14}A$font  CPU: $cpu% $cpubar
$cpugraph
  Highest CPU${alignr}CPU%  MEM%  
    ${top name 1}${alignr}${top cpu 1}${top mem 1}  
    ${top name 2}${alignr}${top cpu 2}${top mem 2}  
    ${top name 3}${alignr}${top cpu 3}${top mem 3}  

${font PizzaDude Bullets:size=14}J$font RAM: $mem / $memmax
${memgraph 16}
  Highest MEM${alignr}CPU%  MEM%  
    ${top_mem name 1}${alignr}${top_mem cpu 1}${top_mem mem 1}  
    ${top_mem name 2}${alignr}${top_mem cpu 2}${top_mem mem 2}  
    ${top_mem name 3}${alignr}${top_mem cpu 3}${top_mem mem 3}  

${font StyleBats:size=14}8$font  Battery: ${battery_percent}% ${battery_bar}

${font StyleBats:size=14}E$font  Todo:
${execi 60 cat ~/todo | sed 's/^/       /g'}
