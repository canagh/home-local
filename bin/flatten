#!/bin/sh

while [ "$1" ]; do
    case "$1" in
        -h | --help )
            echo 'Usage: '`basename "$0"`' [OPTIONS..] DIRECTORIES..'
            exit
            ;;
        -- )
            shift
            break
            ;;
        -* )
            echo `basename "$0"`': unknown option: '\`"$1"\' 1>&2
            exit 1
            ;;
        * )
            break
            ;;
    esac
done

while [ "$1" ]; do
    mv -t "$1"/.. -- "$1"/*
    rmdir "$1"
    shift
done
